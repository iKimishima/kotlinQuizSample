<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorPrimaryInverse">@color/dark</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/material_green</item>
        <item name="android:textColorPrimary">@color/whiteText</item>
        <item name="actionMenuTextColor">@color/whiteText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BTWriting" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/material_green</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

</resources>
